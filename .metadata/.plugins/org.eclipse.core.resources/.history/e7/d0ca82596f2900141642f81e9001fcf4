			<h:panelGrid columns="2">
				<h:form id="acoes" prependId="false">
					<h:commandButton value="Novo" title="Alt + n"
						action="#{tipoProcessoFormController.novo}"
						styleClass="button button-blue-green" accesskey="n" />
					<p:spacer width="5px" />
					<p:commandButton id="consultar" value="Consultar" 
						action="#{tipoProcessoFormController.consulta(tipoProcessoFormController.atual)}"
						styleClass="button button-blue-green"
						disabled="#{tipoProcessoFormController.atual.id eq null}"
						accesskey="c" title="Alt+c" />
					<p:spacer width="5px" />
					<p:commandButton id="editar" value="Alterar" 
						action="#{tipoProcessoFormController.edita(tipoProcessoFormController.atual)}"
						styleClass="button button-blue-green"
						disabled="#{tipoProcessoFormController.atual.id eq null}"
						accesskey="a" title="Alt+a" />
					<p:spacer width="5px" />
					<p:commandButton value="Remover" 
						action="#{tipoProcessoFormController.remove(tipoProcessoFormController.atual)}"
						onclick="return confirm('Deseja realmente excluir o registro ?')"
						styleClass="button button-red"
						disabled="#{tipoProcessoFormController.atual.id eq null}"
						accesskey="r" title="Alt+r" />
	
