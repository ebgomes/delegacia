    MILISEGUNDOS {
        @Override
        public Integer recupera(final Data atual) {
            return MILISEGUNDO.recupera(atual);
        }

        @Override
        public Data soma(final Data atual, final Number valor) {
            return MILISEGUNDO.soma(atual, valor);
        }

        @Override
